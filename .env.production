# ============================================================
# WishShare â€” Production Environment Configuration
# ============================================================

# ---- Application URLs ----
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Production CORS origins
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ---- Environment ----
ENVIRONMENT=production

# ---- Database ----
POSTGRES_DSN=postgresql+asyncpg://wishshare:${POSTGRES_PASSWORD}@postgres:5432/wishshare

# ---- Redis ----
REDIS_DSN=redis://:${REDIS_PASSWORD}@redis:6379/0

# ---- Security ----
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# ---- JWT Configuration ----
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30

# ---- OAuth (optional) ----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---- Email / SMTP ----
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_USE_TLS=true

# ---- Email Notifications ----
EMAIL_NOTIFICATIONS_ENABLED=true

# ---- Parser settings ----
PARSER_BROWSER_DOMAINS=ozon.ru,wildberries.ru,wb.ru,lamoda.ru,dns-shop.ru,market.yandex.ru,yandex.ru,aliexpress.com,aliexpress.ru,amazon.com,amazon.ru
PARSER_BROWSER_FALLBACK=true
PARSER_BROWSER_TIMEOUT_MS=30000

# ---- Caching ----
WISHLIST_CACHE_ENABLED=true
WISHLIST_CACHE_TTL_PUBLIC=120
WISHLIST_CACHE_TTL_PRIVATE=30
WISHLIST_CACHE_TTL_LIST=30

# ---- Rate Limiting ----
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# ---- Sentry Error Monitoring ----
SENTRY_DSN=${SENTRY_DSN}

# ---- Logging ----
LOG_LEVEL=INFO
